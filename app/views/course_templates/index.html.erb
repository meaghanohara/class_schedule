<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All courses
    </h1>

    <a href="/courses/new" class="btn btn-block btn-outline-secondary">
      Add a new course
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "course_templates/courses_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Starts at
        </th>

        <th>
          Ends at
        </th>

        <th>
          Message sent
        </th>

        <th>
          Professor
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <td>
          <%= course.id %>
        </td>

        <td>
          <% if course.user.present? %>
            <a href="/users/<%= course.user.id %>">
              <%= course.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= course.starts_at %>
        </td>

        <td>
          <%= course.ends_at %>
        </td>

        <td>
          <%= course.message_sent %>
        </td>

        <td>
          <%= course.professor %>
        </td>

        <td>
          <%= course.location %>
        </td>

        <td>
          <%= time_ago_in_words(course.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(course.updated_at) %> ago
        </td>

        <td>
          <a href="/courses/<%= course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @courses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All courses
    </h1>

    <a href="/courses/new" class="btn btn-block btn-outline-secondary">
      Add a new course
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Starts at
        </th>

        <th>
          Ends at
        </th>

        <th>
          Message sent
        </th>

        <th>
          Professor
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <!-- Display course.id start -->
        <td>
          <%= course.id %>
        </td>
        <!-- Display course.id end -->

        <!-- Display course.user_id start -->
        <td>
          <%= course.user.email %>
        </td>
        <!-- Display course.user_id end -->

        <!-- Display course.starts_at start -->
        <td>
          <%= course.starts_at %>
        </td>
        <!-- Display course.starts_at end -->

        <!-- Display course.ends_at start -->
        <td>
          <%= course.ends_at %>
        </td>
        <!-- Display course.ends_at end -->

        <!-- Display course.message_sent start -->
        <td>
          <%= course.message_sent %>
        </td>
        <!-- Display course.message_sent end -->

        <!-- Display course.professor start -->
        <td>
          <%= course.professor %>
        </td>
        <!-- Display course.professor end -->

        <!-- Display course.location start -->
        <td>
          <%= course.location %>
        </td>
        <!-- Display course.location end -->

        <!-- Display course.created_at start -->
        <td>
          <%= time_ago_in_words(course.created_at) %> ago
        </td>
        <!-- Display course.created_at end -->

        <!-- Display course.updated_at start -->
        <td>
          <%= time_ago_in_words(course.updated_at) %> ago
        </td>
        <!-- Display course.updated_at end -->

        <td>
          <a href="/courses/<%= course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Course #<%= @course.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/courses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @course.user %>
          <a href="/courses/<%= @course.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit course
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @course.user %>
          <a href="/delete_course/<%= @course.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete course
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @course.user.present? %>
          <a href="/users/<%= @course.user_id %>">
            <%= @course.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Starts at
      </dt>
      <dd>
        <%= @course.starts_at %>
      </dd>

      <dt>
        Ends at
      </dt>
      <dd>
        <%= @course.ends_at %>
      </dd>

      <dt>
        Message sent
      </dt>
      <dd>
        <%= @course.message_sent %>
      </dd>

      <dt>
        Professor
      </dt>
      <dd>
        <%= @course.professor %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @course.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@course.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@course.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>


<% if @course.present? %>
  <% if @course.errors.any? %>
    <% @course.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new course
</h1>


<hr>

<form action="/create_course" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="starts_at">
      Starts at
    </label>

    <input type="text" id="starts_at" name="starts_at" class="form-control" value="<%= @course.starts_at %>">
  </div>

  <div class="form-group">
    <label for="ends_at">
      Ends at
    </label>

    <input type="text" id="ends_at" name="ends_at" class="form-control" value="<%= @course.ends_at %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox" <%= "checked" if @course.message_sent %>>
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <div class="form-group">
    <label for="professor">
      Professor
    </label>

    <input type="text" id="professor" name="professor" class="form-control" value="<%= @course.professor %>">
  </div>

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @course.location %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create course
  </button>
</form>

<hr>

<a href="/courses">
  Go back
</a>
